{
  "name": "stacss/laravel-upd",
  "description": "Универсальный пакет для печати УПД (универсальный передаточный документ) в Laravel",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Stanislav",
      "email": "postnikov.sa@ya.ru"
    }
  ],
  "autoload": {
    "psr-4": {
      "Stacss\\LaravelUpd\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Stacss\\LaravelUpd\\Tests\\": "tests/"
    }
  },
  "require": {
    "php": ">=8.1",
    "illuminate/support": "^10.0|^11.0",
    "barryvdh/laravel-dompdf": "^3.1"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5",
    "orchestra/testbench": "^9.15",
    "friendsofphp/php-cs-fixer": "^3.90"
  },
  "extra": {
    "laravel": {
      "providers": [
        "Stacss\\LaravelUpd\\Providers\\UpdServiceProvider"
      ]
    }
  },
  "scripts": {
    "cs": "php-cs-fixer fix --dry-run --diff",
    "cs-fix": "php-cs-fixer fix",
    "test": "phpunit"
  },
  "keywords": [
    "upd",
    "универсальный передаточный документ",
    "упд",
    "упд ларавел",
    "laravel upd",
    "upd laravel",
    "упд pdf",
    "счёт-фактура",
    "акт",
    "pdf generator",
    "dompdf"
  ],
  "homepage": "https://github.com/stacss/laravel-upd",
  "support": {
    "issues": "https://github.com/stacss/laravel-upd/issues",
    "source": "https://github.com/stacss/laravel-upd"
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
